.skeleton {
  width: 100%;
}

/* 动画效果 */
.skeleton.animate {
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.8;
  }
  100% {
    opacity: 0.6;
  }
}

/* 基础骨架样式 */
.skeleton-item,
.skeleton-category,
.skeleton-detail,
.skeleton-user {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

/* 壁纸列表骨架 */
.skeleton-item {
  display: flex;
  flex-direction: column;
}

.skeleton-image {
  width: 100%;
  height: 400rpx;
  background: #f5f5f5;
}

.skeleton-content {
  padding: 20rpx;
}

.skeleton-title {
  width: 60%;
  height: 32rpx;
  background: #f5f5f5;
  margin-bottom: 16rpx;
}

.skeleton-stats {
  display: flex;
  gap: 20rpx;
}

.skeleton-stat {
  width: 80rpx;
  height: 24rpx;
  background: #f5f5f5;
}

/* 分类列表骨架 */
.skeleton-category {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.skeleton-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.skeleton-name {
  width: 200rpx;
  height: 32rpx;
  background: #f5f5f5;
}

/* 详情页骨架 */
.skeleton-detail {
  display: flex;
  flex-direction: column;
}

.skeleton-cover {
  width: 100%;
  height: 600rpx;
  background: #f5f5f5;
}

.skeleton-info {
  padding: 30rpx;
}

.skeleton-title-lg {
  width: 80%;
  height: 40rpx;
  background: #f5f5f5;
  margin-bottom: 20rpx;
}

.skeleton-desc {
  width: 100%;
  height: 120rpx;
  background: #f5f5f5;
  margin-bottom: 20rpx;
}

.skeleton-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.skeleton-tag {
  width: 120rpx;
  height: 48rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
}

.skeleton-stats-lg {
  display: flex;
  justify-content: space-between;
}

.skeleton-stat-lg {
  width: 200rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

/* 用户信息骨架 */
.skeleton-user {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.skeleton-avatar {
  width: 120rpx;
  height: 120rpx;
  background: #f5f5f5;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.skeleton-user-info {
  flex: 1;
}

.skeleton-nickname {
  width: 200rpx;
  height: 36rpx;
  background: #f5f5f5;
  margin-bottom: 12rpx;
}

.skeleton-uid {
  width: 300rpx;
  height: 24rpx;
  background: #f5f5f5;
} 