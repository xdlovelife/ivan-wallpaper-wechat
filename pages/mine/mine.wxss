.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: #000;
  color: #fff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.uid {
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
  display: flex;
  align-items: center;
}

.copy {
  color: #576b95;
  margin-left: 12rpx;
}

/* 统计数据 */
.stats {
  display: flex;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 任务列表 */
.task-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.task-item:last-child {
  border-bottom: none;
}

.task-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.task-icon {
  width: 40rpx;
  height: 40rpx;
}

.task-reward {
  font-size: 24rpx;
  color: #ff4d4f;
}

.share-btn {
  width: 100% !important;
  background: #fff !important;
  font-weight: normal !important;
  border: none !important;
  padding: 0 30rpx !important;
  line-height: inherit !important;
  border-radius: 0 !important;
}

/* 功能列表 */
.menu-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.contact-btn {
  width: 100% !important;
  background: #fff !important;
  font-weight: normal !important;
  border: none !important;
  padding: 0 30rpx !important;
  line-height: inherit !important;
  border-radius: 0 !important;
  text-align: left !important;
}

/* 版本信息 */
.version {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
} 