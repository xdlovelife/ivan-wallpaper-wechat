.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.wallpaper-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.wallpaper-item {
  width: calc(50% - 10rpx);
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.wallpaper-image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.wallpaper-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  display: flex;
  justify-content: space-around;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s;
}

.action-btn.active {
  background: #ff4d4f;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
} 