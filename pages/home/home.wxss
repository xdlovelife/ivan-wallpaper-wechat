.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

/* 搜索栏 */
.search-bar {
  position: relative;
  padding: 20rpx 30rpx;
  background: #fff;
  z-index: 1;
}

.search-input {
  height: 72rpx;
  padding: 0 80rpx 0 30rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.search-placeholder {
  color: #999;
}

.search-icon {
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-icon image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* 分类标签 */
.category-tags {
  padding: 20rpx 30rpx;
  white-space: nowrap;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tag {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.tag.active {
  background: #007AFF;
  color: #fff;
}

/* 壁纸列表 */
.wallpaper-list {
  flex: 1;
  padding: 20rpx;
}

.wallpaper-item {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.wallpaper-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.wallpaper-image {
  width: 100%;
  height: 400rpx;
  background: #f5f5f5;
}

.wallpaper-info {
  padding: 20rpx;
}

.wallpaper-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wallpaper-stats {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat image {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

.stat text {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.loading-more,
.no-more {
  padding: 30rpx 0;
  text-align: center;
}

.loading-more text,
.no-more text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 