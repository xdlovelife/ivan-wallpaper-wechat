.container {
  height: 100vh;
  background: #f5f5f5;
}

.wallpaper-list {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.wallpaper-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.wallpaper-item-hover {
  opacity: 0.8;
}

.wallpaper-image {
  width: 100%;
  height: 400rpx;
}

.wallpaper-info {
  padding: 20rpx;
}

.wallpaper-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wallpaper-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #999;
}

.stat-icon {
  width: 28rpx;
  height: 28rpx;
}

.empty, .error, .loading, .no-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon, .error-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
}

.retry {
  margin-top: 20rpx;
  color: #576b95;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #576b95;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 